{
  "name": "npm-package-stack",
  "version": "0.0.5",
  "description": "A starter pack for creating an npm package using typescript, tsup, pnpm and biomejs",
  "private": false,
  "homepage": "https://github.com/rahu1gg/npm-package-stack",
  "repository": {
    "url": "https://github.com/rahu1gg/npm-package-stack"
  },
  "scripts": {
    "dev": "vitest",
    "build": "tsup",
    "format": "biome format --write .",
    "check-format": "biome format .",
    "check-exports": "attw --pack .",
    "lint": "tsc",
    "test": "vitest run",
    "prepublishOnly": "npm run ci",
    "local-release": "changeset version && changeset publish",
    "release": "changeset publish",
    "ci": "pnpm build && pnpm check-format && pnpm check-exports && pnpm lint && pnpm test",
    "changeset-version": "changeset version && pnpm format"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "keywords": ["npm package", "stack", "starter kit"],
  "author": "rahul-ghost",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.4",
    "@biomejs/biome": "^1.8.3",
    "@changesets/cli": "^2.27.7",
    "@types/node": "^22.5.1",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "zod": "^3.23.8"
  }
}
